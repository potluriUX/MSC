<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent"
  android:layout_width="fill_parent" >


    

 	<LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.google.android.gms.ads.AdView
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    ads:adUnitId="ca-app-pub-3730266544385182/8929735991"
    ads:adSize="BANNER"/>
		 <FrameLayout 
		    android:id="@+id/container"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"   
		    android:gravity="bottom"
		    android:background="#cd4022"
		    android:padding="10dp">	
		
		  <Button
		      android:id="@+id/roll"
		      android:layout_width="150dp"
		      android:layout_height="wrap_content"
		      android:onClick="getUserYouTubeFeed"
		      android:text="Roll"          
		      android:textSize="15sp"
		      android:textColor="#444"
		      android:textColorHighlight="#999"
		      android:layout_marginTop="4dp"
		      android:layout_gravity="right"
		      android:background="@drawable/button"   />
		  <TextView android:text="Suggested Movie"
		      android:id="@+id/suggestedMovie"
		      android:padding="15dip"
		      android:textSize="16dip"
		      android:textColor="#ffffff"
		      android:layout_marginTop="10dp"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"/>
		  <com.rs.kismet_mallu.VideosListView2
		        android:id="@+id/videosListView"
		        android:layout_width="fill_parent"
		        android:layout_height="133dp"
		        android:layout_marginTop="60dp"
		        android:background="#efefef"/>
		   <TextView 
		       android:id="@+id/moreMovies"
		       android:text="More Movies"
		       android:padding="15dip"
		       android:textSize="16dip"
		       android:textColor="#ffffff"
		       android:layout_marginTop="200dp"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"/>		
			<com.rs.kismet_mallu.VideosListView2	        
			    android:id="@+id/relatedVideosListView"
		        android:layout_width="fill_parent"
		        android:layout_height="290dp"
		        android:layout_marginTop="240dp"
		        android:background="#efefef"/>
		</FrameLayout>
	</LinearLayout>
</ScrollView>

